@model Project2.Models.Missions

@{
    ViewBag.Title = "Missions";
}

<h2>Missions</h2>



<head>

    <link rel="stylesheet" type="text/css" href="~/Content/OurStyles.css" />

</head>

<body>

    <ul class="breadcrumb">
        <li><a href='@Url.Action("Index", "Home")'>Home</a></li>
        <li>Missions</li>
    </ul>

    <h2>Missions</h2>

    <div class="form-horizontal">
        <div class="container">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <table>

                    <tr>
                        <th>
                            @Html.DropDownListFor(x => x.missionName, new[] {
                        new SelectListItem()
                        {Text = "Moscow", Value = "Moscow"},
                        new SelectListItem()
                        {Text = "Portland", Value = "Portland"},
                        new SelectListItem()
                        {Text = "Barcelona", Value = "Barcelona"}}, "Select a Mission")
                        </th>
                    </tr>
                </table>
                <br />
                <input type="submit" value="Go" />
            }
        </div>
    </div>
</body>